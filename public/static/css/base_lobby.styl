ul,h3,h2,h1
	padding 0px
	margin 0px

html
	height 100%

body
	height 100%

body
	font-size 14px

.c
	clear both

nav
	background-color #07749f
	display block
	overflow hidden
	//position relative
	width 100%

	ul
		list-style-type none

		li
			float left

			a
				color #fff !important
				display block
				padding 15px 28px !important
				-webkit-transition: all 0.3s ease-in-out;
				-moz-transition: all 0.3s ease-in-out;
				-ms-transition: all 0.3s ease-in-out;
				-o-transition: all 0.3s ease-in-out;
				transition: all 0.3s ease-in-out;

				&:hover
					text-decoration none
					background-color #23374C
					color #fff
					-webkit-opacity: 0.7;
					-moz-opacity: 0.7;
					opacity: 0.7;

	.mini_avatar
		border 2px solid #fff
		border-radius 34px
		float left
		margin-top: -7px;
		margin-right: 10px;
		height 34px
		width 34px

	.username
		min-width 200px
		outline 0
		a
			display block
			outline 0
			color #fff !important
			-webkit-transition: all 0.3s ease-in-out;
			-moz-transition: all 0.3s ease-in-out;
			-ms-transition: all 0.3s ease-in-out;
			-o-transition: all 0.3s ease-in-out;
			transition: all 0.3s ease-in-out;
			padding 15px 16px

			&:hover
				text-decoration none
				background-color #23374C
				color #fff
				-webkit-opacity: 0.7;
				-moz-opacity: 0.7;
				opacity: 0.7;

			&:active
				text-decoration none
				outline none

		.box
			background-color #23374C
			position absolute
			display none
			z-index 99

			li
				display block
				width 100%
				box-sizing: border-box;

				a
					outline 0
					border-bottom 1px solid #1e2f41
					color #fff
					padding 10px 12px !important

					&:hover
						text-decoration none
						background-color #192837 !important

					&:active
						text-decoration none
						outline none	

.logo
	font-size 1.7em
	margin-right 16px	
	a
		color #fff !important
		padding 8px 28px !important
		-webkit-transition: all 0.3s ease-in-out;
		-moz-transition: all 0.3s ease-in-out;
		-ms-transition: all 0.3s ease-in-out;
		-o-transition: all 0.3s ease-in-out;
		transition: all 0.3s ease-in-out;

		&:hover
			text-decoration none
			background-color #086083
			color #d4d9e4
			-webkit-opacity: 0.7;
			-moz-opacity: 0.7;
			opacity: 0.7;

.wrapper
	display block
	height 100%;
	width 100%

	.row
		padding 0px
		margin 0px

		.col-md-2,
		.col-md-4,
		.col-md-6
			height:100%

		

.edit_profile
	.column
		border-left 1px solid #e3e6e9
		padding 0px

		h2
			display block
			font-size 1.5em !important
			padding 16px 12px !important

		.h2-color1
			background-color #0099cc
			color #fff

		.h2-color2
			background-color #0099cc
			color #fff

.alert
	border-radius 0px
	border 0px
	margin-bottom 0px

	ul
		margin-left 30px

.profile
	margin 20px auto
	width 980px

	.header
		display block
		position relative
		width 100%
	
	.front_cover
		height 250px
		overflow hidden
		img
			display block
			border-radius 6px
			position absolute
			
	.front_cover:hover .btn_change_cover
		display block
		-webkit-opacity: 1;
		-moz-opacity: 1;
		opacity: 1;

	.btn_change_cover
		display none;
		position absolute
		opacity: 0.85;
		padding 10px
		right 0px
		//bottom 0px
		-webkit-transition: all 0.3s ease-in-out;
		-moz-transition: all 0.3s ease-in-out;
		-ms-transition: all 0.3s ease-in-out;
		-o-transition: all 0.3s ease-in-out;
		transition: all 0.3s ease-in-out;

		.btn
			border-radius 2px

		.btn-default
			background-color #16ABCC
			border 0px
			border-bottom 2px solid #11819a
			color #fff
			opacity 0.6

		a
			-webkit-transition: all 0.3s ease-in-out;
			-moz-transition: all 0.3s ease-in-out;
			-ms-transition: all 0.3s ease-in-out;
			-o-transition: all 0.3s ease-in-out;
			transition: all 0.3s ease-in-out;

			&:hover
				-webkit-opacity: 1;
				-moz-opacity: 1;
				opacity: 1;

	.profile_avatar
		border-radius 70px !important
		background-color #000
		position absolute
		bottom -6px
		left 64px

		img
			border-radius 70px !important
			border 4px solid #fff
			box-shadow 1px 2px 5px rgba(0,0,0,0.3)
			width 140px
			height 140px
			-webkit-transition: all 0.3s ease-in-out;
			-moz-transition: all 0.3s ease-in-out;
			-ms-transition: all 0.3s ease-in-out;
			-o-transition: all 0.3s ease-in-out;
			transition: all 0.3s ease-in-out;

		a
			color #fff
			display none
			font-size 2em
			position absolute
			left 50%
			top 50%
			padding 55px
			margin -70px 0 0 -70px

		&:hover
			background-color #000
		
		&:hover img
			-webkit-opacity: 0.7;
			-moz-opacity: 0.7;
			opacity: 0.7;

		&:hover a
			display block

	.username_profile
		font-size 2em;
		color #07749f
		height 60px
		line-height auto
		padding-left 220px
		position relative

		span
			font-size 14px !important
			position absolute
			margin-top -6px

.profile_avatar_big
	display none

	img
		height 280px
		width 280px

.userbox_profile
	a
		font-size 2em;
		text-align center !important
		text-shadow 0px 1px #000

