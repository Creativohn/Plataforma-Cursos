html,
h2,
h3
	margin 0px

html,
body
	width 100%
	height 100%

body
	background rgba(240,243,244,1)
	font-size 14px
	font-family: "Source Sans Pro","Helvetica Neue",Helvetica,Arial,sans-serif;
	-webkit-font-smoothing: antialiased;

.box
	margin 0px auto
	width 360px

	h2
		color #363f44
		font-weight: 700
		font-size 1.4em
		margin-top 60px
		padding 0px 20px
		text-align center

	form
		margin-top 50px

		input[type="submit"]
			color: #fff !important;
			background-color: #7266ba;
			border-color: #7266ba;
			width 100%

			&:hover
				background-color: #6254b2;
				border-color: #5a4daa;

		input[type="text"]
		input[type="password"]

			&:focus
				border-color #ccc
				box-shadow: 0px 0px 0px
		.input-lg
			font-size 1em
			font-weight: normal

	.box-input
		border-radius 0px
		border-bottom 0px
		-webkit-animation: changebar 2.25s infinite 0.75s;

	.first-input
		border-radius 6px 6px 0px 0px
		border-bottom 0px

		&:focus
			border-bottom 0px

	.last-input
		border-radius 0px 0px 6px 6px
		margin-bottom 20px

	.forgot
		margin-top 16px
		text-align center
		a
			color #141719

	.new_account
		margin-top 30px
		text-align center

		span
			display block

		a
			margin-top 10px
			width 100%

.show-alert-error
	margin 50px auto
	width 75%;